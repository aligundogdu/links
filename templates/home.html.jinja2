<html>
<head>
	<style>
		body {
			column-count: 4;
			column-gap: 1em;
		}
		.section {
			display: inline-block;
			margin: 0 0 1em;
			width: 100%;
		}
		h3 {
			margin: 0;
			border-bottom: dashed 1px gray;
		}
		ul {
			margin: 1rem 0 0 0;
			padding: 0;
			list-style-type: none;
		}
		ul li a {
			text-decoration: none;
		}
		ul li p {
			margin-top: 0rem;
			font-size: 80%;
		} 
		ul li:last p {
			margin-bottom: 0;
		}
    @media only screen and (max-width: 600px) {
        body {
          column-count: 2;
      }
    }
  }
	</style>
</head>
<body>
	{% for section, links in sections.items() %}
	<div class="section">
	<h3>{{ section }}</h3>
	<ul>
	{% for name, properties in links.items() %}
		<li>
		<a href="{{ properties.url }}">{{ name }}</a>
		<p>{{ properties.desc}}</p>
		</li>
	{% endfor %}
	</ul>
	</div>
	{% endfor %}
</body>
</html>
